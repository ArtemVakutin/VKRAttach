version: '3.3'

services:
  postgres:
    container_name: postgres-container
    image: postgres:15.3
    environment:
      POSTGRES_DB: "vkrattach"
      POSTGRES_USER: "postgres"
      POSTGRES_PASSWORD: "11111"
      PGDATA: "/var/lib/postgresql/data/pgdata"
    volumes:
      - ./postgres-data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
    restart: unless-stopped